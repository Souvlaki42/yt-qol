{
	"manifest_version": 3,
	"name": "YT timestamp saver",
	"description": "Automatically save the current video timestamp as the t query param when pausing a youtube video.",
	"version": "1.1",
	"permissions": ["activeTab"],
	"content_scripts": [
		{
			"matches": ["*://*.youtube.com/watch?v=*"],
			"js": ["./youtube.js"]
		}
	],
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"action": {
		"default_icon": "images/icon48.png"
	}
}
